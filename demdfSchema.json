{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "DEM Simulation",
    "description": "Specification of a Discrete Elemet Method (DEM) simulation",
    "type": "object",
    "id": "schemata/demdf",
    "title": "Lalala - lala",
    "type": ["object"],
    "properties": {
        "name": {
            "description": "Name of the simulation",
            "type": "string"
        },
        "dimensionality": {
            "description": "Number of spatial degrees of freedom of particles",
            "type": "integer",
            "minimum": 2,
            "maximum": 3
        },
        "time": {
            "description": "Current time (in arbitrary units) of the simulation",
            "type": "number",
            "minimum": 0
        },
        "timeEnd": {
            "description": "Time (in arbitrary units) at which the simulation should stop",
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        },
        "timeStep": {
            "description": "For soft-simulations, the time-step of integration of the forces",
            "type": "number",
            "minimum": 0
        },
        "timeStepNumber": {
            "description": "How many time-steps have been realized",
            "type": "integer",
            "minimum": 0
        },
        "timeStepNumberEnd": {
            "description": "Number of time-steps at which the simulation should stop",
            "type": "integer",
            "minimum": 0,
            "exclusiveMinimum": true
        },
        "domain": {
            "description": "Two D-vectors specifying the opposite vertices of a square that defines the system's domain",
            "type": "array",
            "items": [
                {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "additionalItems": false,
                    "items": {"type":"number", "type":"number", "type":"number"}
                },
                {
                    "type": "array",
                    "minItems": 3,
                    "maxItems": 3,
                    "additionalItems": false,
                    "items": {"type":"number", "type":"number", "type":"number"}
                }]
        },
        "bodyForce": {
            "description": "External body force",
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "additionalItems": false,
            "items": {"type":"number", "type":"number", "type":"number"}
        },
        "walls": {
            "description": "Array with walls",
            "type": "array",
            "items": {
                "type":"object",
                "properties": {
                    "normal": {
                        "type": "array",
                        "minItems": 3,
                        "maxItems": 3,
                        "additionalItems": false,
                        "items": {"type":"number", "type":"number", "type":"number"}
                    },
                    "point": {
                        "type": "array",
                        "minItems": 3,
                        "maxItems": 3,
                        "additionalItems": false,
                        "items": {"type":"number", "type":"number", "type":"number"}
                    },
                    "typename": {
                        "type": "string"
                    }
                }
            }
        },
        "particles": {
            "description": "Array with particles",
            "type": "array",
            "items": {
                "type": "array",
                "additionalItems": false,
                "minItems": 6,
                "maxItems": 6,
                "items": [
                    {
                        "description": "x-coordinate",
                        "type": "number"
                    },
                    {
                        "description": "y-coordinate",
                        "type": "number"
                    },
                    {
                        "description": "z-coordinate",
                        "type": "number"
                    },
                    {
                        "description": "velocity x-component",
                        "type": "number"
                    },
                    {
                        "description": "velocity y-component",
                        "type": "number"
                    },
                    {
                        "description": "velocity z-component",
                        "type": "number"
                    }
                ]
            }
        }
    }
}
